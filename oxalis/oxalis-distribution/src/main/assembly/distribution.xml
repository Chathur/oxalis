<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>

    <files>
        <file>
            <source>../oxalis-start-inbound/target/classes/sample-oxalis-web.properties</source>
            <outputDirectory>tomcat</outputDirectory>
        </file>
        <file>
            <source>../install.sh</source>
        </file>
        <file>
            <source>../install.html</source>
        </file>
    </files>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>no.sendregning.ap:oxalis-start-inbound:*</include>
            </includes>
            <binaries>
                <includeDependencies>false</includeDependencies>
                <unpack>false</unpack>
                <outputDirectory>
                    ${module.artifactId}
                </outputDirectory>
                <outputFileNameMapping>oxalis.${artifact.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>

        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>no.sendregning.ap:oxalis-standalone:*</include>
            </includes>
            <binaries>
                <includeDependencies>false</includeDependencies>
                <unpack>false</unpack>
                <outputDirectory>
                    ${module.artifactId}
                </outputDirectory>
                <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>

        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>no.sendregning.ap:oxalis-api:*</include>
            </includes>
            <binaries>
                <includeDependencies>true</includeDependencies>
                <dependencySets>
                    <dependencySet>
                        <outputDirectory>tomcat</outputDirectory>
                    </dependencySet>
                </dependencySets>
                <unpack>false</unpack>
                <outputDirectory>tomcat</outputDirectory>
            </binaries>
        </moduleSet>

    </moduleSets>
</assembly>