<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>distro</id>
    <includeBaseDirectory>false</includeBaseDirectory>

    <!-- The output produced. Everybody can open .zip files  -->
    <formats>
        <format>dir</format>
    </formats>


    <files>

        <!-- Make these present in the root for everybody to see -->
        <file>
            <source>../install.sh</source>
        </file>

        <file>
            <source>../oxalis-commons/src/main/resources/oxalis-global.properties</source>
            <outputDirectory>etc</outputDirectory>
        </file>
        <file>
            <source>../oxalis-collector/target/oxalis-collector-${project.version}.one-jar.jar</source>
            <outputDirectory>bin</outputDirectory>
            <destName>oxalis-collector-one-jar.jar</destName>
        </file>
    </files>

    <!-- Documentation -->
    <fileSets>
        <fileSet>
            <directory>../doc</directory>
            <outputDirectory>doc</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
    </fileSets>

    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>no.sendregning.ap:oxalis-start-inbound:*</include>
            </includes>
            <binaries>
                <includeDependencies>false</includeDependencies>
                <unpack>false</unpack>
                <outputDirectory>
                    ${module.artifactId}
                </outputDirectory>
                <!-- No version name to ensure that the name of the web context is unchanged across versions -->
                <outputFileNameMapping>oxalis.${artifact.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>

        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>no.sendregning.ap:oxalis-standalone:*</include>
            </includes>
            <binaries>
                <includeDependencies>false</includeDependencies>
                <unpack>false</unpack>
                <outputDirectory>
                    bin
                </outputDirectory>
                <!-- Ensures that the final artifact has the same name across versions, -->
                <!-- This ensures that the shell script will work -->
                <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
            </binaries>
        </moduleSet>

        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>no.sendregning.ap:oxalis-api:*</include>
            </includes>
            <binaries>
                <includeDependencies>true</includeDependencies>
                <dependencySets>
                    <dependencySet>
                        <outputDirectory>tomcat</outputDirectory>
                    </dependencySet>
                </dependencySets>
                <unpack>false</unpack>
                <outputDirectory>tomcat</outputDirectory>
            </binaries>
        </moduleSet>
    </moduleSets>

</assembly>